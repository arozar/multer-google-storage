{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "lib": [
            "es2015"
        ],
        "outDir": "./lib",
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": true,
        "types": [
            "node", "mocha", "chai"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}